<div class="flex text-xl bg-gradient-to-b from-slate-900 to-slate-800 rounded-md text-gray-600">
    <div class="w-12 flex-shrink-0 flex flex-col border-r border-gray-200 p-2">
        <div class="flex-grow flex-shrink-0 px-2 line-numbers text-right">
          <div></div>
          <div></div>
          {% for package in packages %}
            <div></div>
          {% endfor %}
          <div></div>
          <div></div>
        </div>
    </div>
    <div class="p-2 flex flex-col flex-nowrap flex-grow overflow-x-auto font-mono text-gray-400">
      <code>{</code>
      <code>&emsp;"require-dev": {</code>
      {%- for package in packages -%}
        <code class="flex-shrink-0 flex-nowrap">
        &emsp;&emsp;<a class="package text-indigo-400" href="{{ package.url | url }}">"{{ package.data.package_name }}": "{{ package.data.package_version }}"</a>{%- if not loop.last -%},{%- endif -%}
        </code>
      {%- endfor -%}
      <code>&emsp;}</code>
      <code>}</code>
    </div>
    <div class="max-w-2xl min-w-min flex-shrink-0 flex flex-col border-l border-gray-200 p-2">
        <div class="flex-grow flex-shrink-0 px-2 compact-pane">
            <div>&nbsp;</div>
            <div>&nbsp;</div>
            {% for package in packages %}
              <div class="flex flex-row">
              {% for tagName in package.data.tags | filterTagList %}
                  {% tag tagName %}
              {% endfor %}
              </div>
            {% endfor %}
        </div>
    </div>
  </div>
</div>
